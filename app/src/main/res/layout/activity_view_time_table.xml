<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
       <variable
            name="ViewTimetableAdapter"
            type="com.op.eschool.adapters.time_table.ViewTimetableAdapter" />

        <variable
            name="model"
            type="com.op.eschool.models.timetable_model.TimeTableModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activities.LoginTypeActivity"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/rlHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:orientation="horizontal"
                android:background="@color/primary_color"

                >

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    app:srcCompat="@drawable/ic_back"
                    app:tint="@color/white" />


                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:paddingStart="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="Time Table"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp"
                    android:textStyle="bold"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <TextView
                    android:id="@+id/class_grp"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/edit_text_bg"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:hint="Select Class Group"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:drawableEnd="@drawable/down_arrow"


                    />

                <TextView
                    android:id="@+id/txt_class"
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/_35sdp"
                    android:background="@drawable/edit_text_bg"
                    android:orientation="horizontal"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:layout_marginHorizontal="@dimen/_5sdp"
                    android:hint="Select Class"
                    android:layout_gravity="center|start"
                    android:gravity="center|start"
                    android:drawableEnd="@drawable/down_arrow"


                    />




            </LinearLayout>

            <ImageView
                android:id="@+id/no_data"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:src="@drawable/no_data"
                android:layout_marginTop="@dimen/_20sdp"
                />

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                >

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentRight="true"
                        android:singleLine="true"
                        android:text="PERIOD"
                        android:textStyle="bold"
                        android:layout_gravity="center|start"
                        android:gravity="center"
                        android:background="@color/primary_color"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        android:paddingStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        android:adapter="@{ViewTimetableAdapter}"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_alignParentRight="true"
                        android:singleLine="true"
                        android:text="Information"
                        android:textStyle="bold"
                        android:layout_gravity="center|start"
                        android:gravity="center"
                        android:background="@color/primary_color"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13ssp"
                        android:paddingStart="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_50sdp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:singleLine="true"
                            android:text='@{"Time : " + model.timeTo + " To "+model.timeFrom}'

                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"

                            />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:paddingStart="@dimen/_5sdp"
                        android:singleLine="true"
                        android:text='@{model.subject.equalsIgnoreCase("Select Subject")?"--":model.subject}'
                        android:textAllCaps="true"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_5sdp"
                        />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|start"
                            android:singleLine="true"
                            android:text='@{model.teacher.equalsIgnoreCase("Select Teacher")?"--":model.teacher}'

                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textStyle="bold"

                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>




        </LinearLayout>

    </RelativeLayout>
</layout>