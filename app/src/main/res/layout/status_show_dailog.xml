<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AlertDailogueContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_20sdp"
    android:padding="@dimen/_20sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                >
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    >

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13ssp"
                        android:text="SUCCESS"
                        android:paddingVertical="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_13ssp"
                        android:text="Remark from API"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_30sdp"
                    >

                    <TextView
                        android:id="@+id/btn_submit"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_40sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Ok"
                        android:background="@drawable/btn_bg"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_15ssp" />


                    <TextView
                        android:id="@+id/btn_retry"
                        android:layout_width="0sp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/_40sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Retry"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/btn_bg"
                        android:backgroundTint="@color/secendery_color"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_15ssp" />


                </LinearLayout>




                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


            </androidx.cardview.widget.CardView>

        </LinearLayout>




        <com.op.eschool.util.CircularCardView
            app:cardElevation = "@dimen/_5sdp"
            android:layout_width = "@dimen/_60sdp"
            android:layout_height = "@dimen/_60sdp"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/image"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:scaleType="center"
                android:background="@color/green"
                android:src="@drawable/success_image"
                 />
        </com.op.eschool.util.CircularCardView>

        <ImageView
            android:id="@+id/ImageIcon"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_centerInParent="true"
            android:background="@drawable/sucees_bg"
            android:padding="@dimen/_10sdp"
            android:scaleType="fitXY"
            android:src="@drawable/success_image"
            android:visibility="gone"
            />

    </RelativeLayout>


</LinearLayout>